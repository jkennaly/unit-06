extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 Another Fine Mess

      p.lead.text-light
        | Stuff I've programmed
  article.grid-container.portfolio-index
    
    //-show each project cell, sorted by the order property (I added the order property so that I could order them arbitrarily)
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects.sort((a, b) => a.order - b.order)
        .cell
          a(href="projects/" + project.id)
            img.thumbnail(src=project.image_urls[0])
            h5= project.project_name